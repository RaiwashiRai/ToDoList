<%- include('header'); -%>

<!-- visit ejs documentation for more info on tags -->
<div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
</div>

<div class="box">

    <% for (var i = 0; i < newListItem.length; i++){%>
    <div class="item">
        <input type="checkbox">
        <p> <%= newListItem[i] %> </p>
    </div>
    <%}%>



    <form class="" action="/" method="post">
        <input type="text" name="newListItem_" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value= <%= listTitle %> >+</button>
    </form>
</div>

<%- include('footer'); -%>
